@model EmailViewModel

<h1>Email Form</h1>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="from">From</label>
        <input type="text" class="form-control" id="from" name="from" value="@Model.From" />
        <span asp-validation-for="From" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="to">To</label>
        <input type="text" class="form-control" id="to" name="to" value="@Model.To" />
        <span asp-validation-for="To" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="subject">Subject</label>
        <input type="text" class="form-control" id="subject" name="subject" value="@Model.Subject" />
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <textarea class="form-control" id="body" name="body">@Model.Body</textarea>
    </div>
    <div class="form-group">
        <label for="attachment">Attachment</label>
        <input type="file" class="form-control-file" id="attachment" name="attachment" />
    </div>
    <button type="submit" class="btn btn-primary">Send Email</button>
</form>
