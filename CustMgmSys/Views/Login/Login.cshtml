@model LoginModel
@{
    Layout = "_LayoutLogin";
}

<style>
    .msg {
        padding: 0px;
    }


    .err {
        color: red;
    }
</style>
<section class="container m-3"> 
        <div class="row">
            <div class="card  m-auto">
                <form asp-action="Login" method="post">

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label"><b>UserName</b></label>
                            <input type="text" asp-for="UserName" class="form-control" placeholder="Enter UserName">
                            <div class="">
                                <span class="err" asp-validation-for="UserName"></span>
                            </div>

                        </div>
                        <div class="mb-3">

                            <label asp-for="Password" class="form-label"><b>Password</b></label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password">
                            <div class="msg">
                                <span asp-validation-for="Password" class="err"></span>
                            </div>
                        </div>

                        @if (TempData["msg"] != null)
                        {
                            <div class="msg">@TempData["msg"]</div>
                        }

                        <button type="submit" class="btn btn-primary">Login</button>
                       @* <a class="text-alert" href="/Login/Registration">Not a user? Signup</a>*@
                </form>
            </div>
        </div>
    </div>
</section>


